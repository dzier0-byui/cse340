<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
      res.redirect('/')
} %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <% if (error.msg != "Invalid value") { %>
            <li><%= error.msg %></li>
        <% } %>
    <%  }) %>
    </ul>
<% } %>

<form id="reviewForm" action="/review/add-review" method="post">
    <!-- <div class="text-info">
        <em>All fields are required.</em>
    </div> -->
    
    <div class="form-group">
        <label for="reviewTextInput">Review</label>
        <textarea id="descriptionInput" class="input-field" name="review_text" required><%= review_text || '' %></textarea>
    </div>

    <input type="hidden" name="inv_id" value="<%= inv_id %>" />

    <input type="hidden" name="account_id" value="<%= locals.accountData?.account_id %>" />

    <button type="submit" id="reviewButton" class="btn-register">Add Review</button>
</form>
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
      res.redirect('/')
} %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <% if (error.msg != "Invalid value") { %>
            <li><%= error.msg %></li>
        <% } %>
    <%  }) %>
    </ul>
<% } %>

<form id="vehicleForm" action="/inv/delete" method="post">
    <div class="text-info">
        <em>Confirm Deletion - The deletion is permanent.</em>
    </div>

    <div class="form-group">
        <label for="makeNameInput">Make</label>
        <input type="text" id="makeNameInput" class="input-field" name="inv_make"
            placeholder="Min of 3 characters" pattern=".{3,}" value="<%= inv_make || '' %>" readonly />
    </div>

    <div class="form-group">
        <label for="modelNameInput">Model</label>
        <input type="text" id="modelNameInput" class="input-field" name="inv_model"
            placeholder="Min of 3 characters" pattern=".{3,}" value="<%= inv_model || '' %>" readonly />
    </div>

    <div class="form-group">
        <label for="priceInput">Price</label>
        <input type="number" id="priceInput" class="input-field" name="inv_price"
            placeholder="decimal or integer" step="0.01" value="<%= inv_price || '' %>" readonly />
    </div>

    <div class="form-group">
        <label for="yearInput">Year</label>
        <input type="number" id="yearInput" class="input-field" name="inv_year"
            placeholder="4-digit year" pattern="\d{4}" min="1886" value="<%= inv_year || '' %>" readonly />
    </div>

    <button type="submit" id="addButton" class="btn-add">Delete Vehicle</button>

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>
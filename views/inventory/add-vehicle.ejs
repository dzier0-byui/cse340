<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
      res.redirect('/')
} %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <% if (error.msg != "Invalid value") { %>
            <li><%= error.msg %></li>
        <% } %>
    <%  }) %>
    </ul>
<% } %>

<form id="vehicleForm" action="/inv/vehicle" method="post">
    <div class="text-info">
        <em>All fields are required.</em>
    </div>

    <div class="form-group">
        <label for="classificationList">Classification</label>
        <%- dropdown %>
    </div>

    <div class="form-group">
        <label for="makeNameInput">Make</label>
        <input type="text" id="makeNameInput" class="input-field" name="inv_make"
            placeholder="Min of 3 characters" pattern=".{3,}" value="<%= inv_make || '' %>" required />
    </div>

    <div class="form-group">
        <label for="modelNameInput">Model</label>
        <input type="text" id="modelNameInput" class="input-field" name="inv_model"
            placeholder="Min of 3 characters" pattern=".{3,}" value="<%= inv_model || '' %>" required />
    </div>

    <div class="form-group">
        <label for="descriptionInput">Description</label>
        <textarea id="descriptionInput" class="input-field" name="inv_description" required><%= inv_description || '' %></textarea>
    </div>

    <div class="form-group">
        <label for="imgInput">Image Path</label>
        <input type="text" id="imgInput" class="input-field" name="inv_image"
            value="/images/vehicles/no-image.png" readonly/>
    </div>

    <div class="form-group">
        <label for="thumbnailInput">Thumbnail Path</label>
        <input type="text" id="thumbnailInput" class="input-field" name="inv_thumbnail"
            value="/images/vehicles/no-image.png" readonly/>
    </div>

    <div class="form-group">
        <label for="priceInput">Price</label>
        <input type="number" id="priceInput" class="input-field" name="inv_price"
            placeholder="decimal or integer" step="0.01" value="<%= inv_price || '' %>" required />
    </div>

    <div class="form-group">
        <label for="yearInput">Year</label>
        <input type="number" id="yearInput" class="input-field" name="inv_year"
            placeholder="4-digit year" pattern="\d{4}" min="1886" value="<%= inv_year || '' %>" required />
    </div>

    <div class="form-group">
        <label for="milesInput">Miles</label>
        <input type="number" id="milesInput" class="input-field" name="inv_miles"
            placeholder="digits only" min="0" value="<%= inv_miles || '' %>" required />
    </div>

    <div class="form-group">
        <label for="colorInput">Color</label>
        <input type="text" id="colorInput" class="input-field" name="inv_color" value="<%= inv_color || '' %>" required />
    </div>

    <button type="submit" id="addButton" class="btn-add">Add Vehicle</button>
</form>